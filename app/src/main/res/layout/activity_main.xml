<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context="com.example.esp_app.MainActivity">-->


        <TextView
            android:layout_width="70dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="20dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:text="I P"
            android:textSize="30sp"></TextView>

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/IP_num" />

        <TextView
            android:layout_width="70dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="-280dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:text="端口"
            android:textSize="30sp"></TextView>

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="145dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/port_num" />

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="245dp"
            android:id="@+id/IP_connect_but"
            android:layout_marginLeft="-150dp"
            android:text="连接"
            android:background="@drawable/background"
            android:textSize="20sp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="345dp"
            android:layout_marginLeft="-160dp"
            android:id="@+id/led_open_but"
            android:background="@drawable/background"
            android:text="led开"
            android:textSize="20sp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="345dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/led_close_but"
            android:background="@drawable/background"
            android:text="led关"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spi_list"
            android:layout_marginLeft="20dp"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:entries="@array/functions"
            android:dropDownWidth="150dp"
            android:background="@drawable/background">

        </Spinner>

    </LinearLayout>
